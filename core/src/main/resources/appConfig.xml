<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="memberService" class="com.inflearn.spring.core.member.MemberServiceImpl">
    <constructor-arg name="memberRepository" ref="memberRepository" />
  </bean>

  <bean id="memberRepository" class="com.inflearn.spring.core.member.MemoryMemberRepository"/>

  <bean id="orderService" class="com.inflearn.spring.core.order.OrderServiceImpl">
    <constructor-arg name="memberRepository" ref="memberRepository" />
    <constructor-arg name="discountPolicy" ref="discountPolicy" />
  </bean>

  <bean id="discountPolicy" class="com.inflearn.spring.core.discount.RateDiscountPolicy" />
</beans>